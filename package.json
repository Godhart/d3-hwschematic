{
  "name": "d3-hwschematic",
  "version": "0.0.6",
  "description": "D3.js and ELK based schematic visualizer",
  "main": "dist/d3-hwschematic.js",
  "scripts": {
    "init": "eslint --init",
    "build": "rm -rf dist && mkdir dist && NODE_ENV=production rollup -c",
    "clean": "rm -rf dist/ node_modules/",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "NODE_ENV=development jest --env=node",
    "coveralls": "NODE_ENV=development jest --coverage --env=node && cat ./tests/coverage/lcov.info | coveralls",
    "lint": "eslint src test --ignore-pattern tests/coverage*",
    "debug-remote": "NODE_ENV=development node --inspect-brk node_modules/.bin/jest --env=node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nic30/d3-hwschematic.git"
  },
  "keywords": [
    "D3.js",
    "hardware",
    "schematic",
    "RTL",
    "viewer",
    "components",
    "diagram"
  ],
  "author": "Michal Orsak",
  "license": "EPL-1.0",
  "bugs": {
    "url": "https://github.com/Nic30/d3-hwschematic/issues"
  },
  "homepage": "https://github.com/Nic30/d3-hwschematic#readme",
  "dependencies": {
    "d3": "latest"
  },
  "devDependencies": {
    "coveralls": "latest",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "latest",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "babel-preset-flow": "latest",
    "babel-preset-env": "latest",
    "babel-preset-stage-0": "latest",
    "jest": "latest",
    "rollup": "^0.63"
  },
  "jest": {
    "transformIgnorePatterns": [
       "node_modules/.*",
       "src/elk/elk-worker.js"
    ],
    "cacheDirectory": ".jest-cache",
    "coverageDirectory": "<rootDir>/tests/coverage",
    "coveragePathIgnorePatterns": [
      "node_modules/",
       "src/elk/elk-worker.js"
    ],
    "verbose": true
  }
}
